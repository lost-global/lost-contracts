{
  "name": "@lost-protocol/contracts",
  "version": "1.0.0",
  "description": "LOST Protocol - Sovereign Gaming Achievement Smart Contracts on Hedera",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.js --network hedera",
    "deploy:simple": "hardhat run scripts/deploy-simple.js --network hedera",
    "deploy:native": "node scripts/deploy-hedera-native.js",
    "fund:account": "node scripts/fund-account.js",
    "deploy:fixed": "hardhat run scripts/deploy-fixed.js --network hedera",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "solhint 'src/**/*.sol' 'interfaces/**/*.sol'",
    "format": "prettier --write 'src/**/*.sol' 'interfaces/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'"
  },
  "keywords": [
    "lost",
    "gaming",
    "blockchain",
    "hedera",
    "nft",
    "defi",
    "web3",
    "solidity"
  ],
  "author": "LOST Protocol Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.40.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "dotenv": "^16.3.1"
